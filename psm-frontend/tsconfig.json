{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,//模块隔离
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    //解析非相对模块的基础地址，默认是当前目录
	"baseUrl": "./",
	//路径映射，相对于baseUrl
	"paths": {
		"@/*": ["src/*"],
    "components/*": ["src/components/*"],
    "global": ["src/global"],
    "types/*": ["src/types/*"],
    "commonScss": ["src/common.scss"],
    "router": ["src/router"],
	},
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.js"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "allowJs": true,  /* 允许编译器编译 JS、JSX 文件 */
}

